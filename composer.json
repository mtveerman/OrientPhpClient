{
    "name": "mtveerman/orientphpclient",
    "type": "library",
    "description": "PHP client for OrientDB (HTTP)",
    "keywords": [
        "mtveerman",
        "orientphpclient"
    ],
    "homepage": "https://github.com/mtveerman/OrientPhpClient",
    "license": "MIT",
    "authors": [
        {
            "name": "Maarten Veerman",
            "email": "mtveerman@gmail.com",
            "homepage": "http://github.com/mtveerman",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0",
        "vlucas/phpdotenv": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "mtveerman\\OrientPhpClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "mtveerman\\OrientPhpClient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
